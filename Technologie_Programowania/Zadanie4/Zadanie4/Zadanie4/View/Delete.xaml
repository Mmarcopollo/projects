<Window x:Class="Zadanie4.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie4"
        mc:Ignorable="d"
        Title="Delete" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="794" Margin="0,0,-0.4,0"/>
        <Image Margin="0,0,-0.4,0" Source="Image10.png" Stretch="Fill"/>
        <TextBox HorizontalAlignment="Left" Height="84" Margin="60,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 Width="250" FontSize="20"
                 Text="{Binding IdReview}" Foreground="#FFB66A6A"/>
        <Button Content="DELETE" HorizontalAlignment="Left" Margin="474,103,0,0" VerticalAlignment="Top" Width="250" Height="84"
                 Background="#FF847CF3"  Click="Button_Click" Foreground="#FF121111"
                  Command="{Binding DeleteCmd}" FontSize="24" FontWeight="Bold"/>
        <Label Content="Id Review" HorizontalAlignment="Left" Margin="60,55,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold" Width="165"/>


    </Grid>
</Window>
